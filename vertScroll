<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mobile Gallery with Auto Scroll (Vertical)</title>
    <style>
        /* Reset some default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
        }

        /* Gallery container */
        .gallery-container {
            position: relative;
            display: flex;
            flex-direction: column; /* Change to vertical direction */
            /* Remove overflow: hidden; to enable mouse scrolling */
            height: 100vh;
            scroll-behavior: smooth; /* Smooth scrolling behavior */
        }

        /* Gallery item */
        .gallery-item {
            flex: 0 0 100%;
            min-height: 100vh; /* Adjust height */
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f0f0f0;
        }

        /* Images in the gallery */
        .gallery-item img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

        /* Navigation arrows */
        .arrows {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1; /* Ensure arrows appear above the gallery */
        }

        .up-arrow,
        .down-arrow {
            width: 40px;
            height: 40px;
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            text-align: center;
            line-height: 40px;
            cursor: pointer;
        }

        .up-arrow {
            margin-bottom: 10px;
        }

        .down-arrow {
            margin-top: 10px;
        }

        /* Counter */
        .counter {
            position: absolute;
            bottom: 100px;
            left: 0%;
            transform: translateX(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="arrows">
        <div class="up-arrow">&#9650;</div>
        <div class="counter">1 / 3</div>
        <div class="down-arrow">&#9660;</div>
    </div>
    <div class="gallery-container">
        <div class="gallery-item">
            <img src="https://mupoint.github.io/Anim2D1.png" alt="Image 1">
        </div>
        <div class="gallery-item">
            <img src="https://mupoint.github.io/Anim2D2.png" alt="Image 2">
        </div>
        <div class="gallery-item">
            <img src="https://mupoint.github.io/Anim2D3.png" alt="Image 3">
        </div>
        <!-- Add more gallery items as needed -->
    </div>

    <script>
        const galleryContainer = document.querySelector('.gallery-container');
        const upArrow = document.querySelector('.up-arrow');
        const downArrow = document.querySelector('.down-arrow');
        const counter = document.querySelector('.counter');

        let currentIndex = 0;

        function updateCounter() {
            counter.textContent = `${currentIndex + 1} / ${galleryContainer.children.length}`;
        }

        function scrollToNextItem() {
            if (currentIndex < galleryContainer.children.length - 1) {
                currentIndex++;
                galleryContainer.scrollTo({ top: currentIndex * galleryContainer.clientHeight, behavior: 'smooth' });
                updateCounter();
            }
        }

        upArrow.addEventListener('click', () => {
            if (currentIndex > 0) {
                currentIndex--;
                galleryContainer.scrollTo({ top: currentIndex * galleryContainer.clientHeight, behavior: 'smooth' });
                updateCounter();
            }
        });

        downArrow.addEventListener('click', () => {
            scrollToNextItem();
        });

        // Auto-scroll to the next item
        let autoScrollInterval = setInterval(scrollToNextItem, 5000); // Change the interval as needed

        galleryContainer.addEventListener('scroll', () => {
            currentIndex = Math.round(galleryContainer.scrollTop / galleryContainer.clientHeight);
            updateCounter();
        });

        // Initialize counter
        updateCounter();
    </script>
</body>
</html>
